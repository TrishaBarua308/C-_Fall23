#include<bits/stdc++.h>
#define optimize() ios_base :: sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define endl '\n'
#define ll long long
using namespace std;
int main()
{
    optimize();
    int t;  cin>>t;

    while(t--)
    {
        int n; cin>>n;
        string s;  cin>>s;
        int ans =0;
        for(int i=0; i<n; i++)
        {
            if(s[i]=='1')
            {
                ans +=(n-1);
            }
            else
            {
                ans += 1;
            }
        }

        cout<<ans<<endl;
    }

    return 0;
}
